= form_for @op, html: { class: "block-group" } do |f|
  .row
    .small-2.column.text-right.unpad-right
      = f.label :name
    .small-10.column
      = f.text_field :name, required: true
  .row
    .small-2.column.text-right.unpad-right
      = f.label :start
    .small-10.column
      = f.text_field :start_time, class: "datetimepicker", required: true, value: @op.start_time
  .row
    .small-12.column.text-right
      = link_to icon('close')+" delete", @op, method: :delete, class: "button small pull-left alert" unless action_name == "new"
      = f.submit "save", class: "button small"
