%header
  = page_title "Claim Summary"

.row
  .small-12.column
    %h3= current_corp.name
.block-group
  .row
    .small-6.column
      Op Name
    .small-4.column
      Date
    .small-2.column
      Claims
  - current_corp.ops.concluded.each do |op|
    .row
      .small-6.column
        = op.name
      .small-4.column
        = op.end_time
      .small-2.column
        = op.total

